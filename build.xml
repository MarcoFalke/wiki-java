<project default="flock_jar" name="Create Runnable Jar for Flock">
	<property name="dir.src" value="src" />
	<property name="dir.build" value="ant_build" />

	<target name="compile">
		<delete dir="${dir.build}" />
		<mkdir dir="${dir.build}" />
		<javac srcdir="${dir.src}" destdir="${dir.build}" />
	</target>
	<target name="flock_jar" depends="compile">
		<jar destfile="flock.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="app.Flock" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="${dir.build}" />
		</jar>
	</target>
</project>
